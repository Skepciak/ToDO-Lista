// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// NextAuth models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // For credentials login
  image         String?
  role          String    @default("user") // user | admin
  
  accounts      Account[]
  sessions      Session[]
  todos         Todo[]
  
  // Board relations
  ownedBoards   Board[]        @relation("BoardOwner")
  boardMembers  BoardMember[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

// Board (Tablica) - like Trello boards
model Board {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#6366f1")
  
  // Owner
  ownerId     String
  owner       User     @relation("BoardOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  // Members
  members     BoardMember[]
  
  // Invitations
  invites     BoardInvite[]
  
  // Todos on this board
  todos       Todo[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Board membership
model BoardMember {
  id       String @id @default(cuid())
  role     String @default("member") // owner | admin | member | viewer
  
  boardId  String
  board    Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  joinedAt DateTime @default(now())
  
  @@unique([boardId, userId])
}

// Email invitations to board
model BoardInvite {
  id        String   @id @default(cuid())
  email     String
  role      String   @default("member")
  token     String   @unique @default(cuid())
  
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  
  expiresAt DateTime
  usedAt    DateTime?
  
  createdAt DateTime @default(now())
}

// Todo models
model Todo {
  id          String    @id @default(cuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  priority    String    @default("medium") // high, medium, low
  dueDate     DateTime?
  order       Int       @default(0)
  
  // User relation (personal todos)
  userId      String?
  user        User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Board relation (shared todos)
  boardId     String?
  board       Board?    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  
  // Subtasks relation
  parentId    String?
  parent      Todo?     @relation("Subtasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks    Todo[]    @relation("Subtasks")
  
  // Category relation
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  
  // Google Calendar sync
  googleEventId String?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Category {
  id    String @id @default(cuid())
  name  String
  color String @default("#6366f1")
  todos Todo[]
}
